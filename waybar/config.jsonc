{
    "layer": "top",
      "output": [
                "Dell Inc. DELL S2725QC GZPG464", 
            ],
        "position": "top",
        "mod": "dock",
        "exclusive": true,
        "passthrough": false,
        "gtk-layer-shell": true,
        "height": 48,
        "margin": 0,
        "modules-left": [
            "custom/rofi",
            "custom/updates",
            "custom/weather",
            "custom/khorshididate",
            "clock",
            "wlr/taskbar",
        ],

        "modules-center": [
            "hyprland/workspaces",
        ],

        "modules-right": [
            "tray",
            "custom/swaync",
            "pulseaudio",
            "pulseaudio#microphone",
            "cpu",
            "memory",
            "disk",
            "temperature",
            "network",
            // "battery",
            "hyprland/language",
            "custom/lock_screen",
            "custom/power"
        ],
      // "battery": {
      //   "format": "{icon} {capacity}%",
      //   "format-charging": "‚ö° {capacity}%",
      //   "format-plugged": "üõá {capacity}%",
