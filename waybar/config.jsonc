  //   "tooltip": true,
  // },
    "custom/rofi": {
        "format": "Û∞Äª",
        "on-click": "rofi -show drun",
        "tooltip": false
    },

    "custom/power": {
        "format": "ÔÄë",
        "on-click": "~/.config/waybar/scripts/power-menu",
        "tooltip": "Power Menu"
    },
    "custom/swaync": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
            "notification": "üîî",
            "none": "",
            "dnd-notification": "üîï",
            "dnd-none": "üîï",
            "inhibited-notification": "üîî",
            "inhibited-none": "üîï",
            "dnd-inhibited-notification": "üîï",
            "dnd-inhibited-none": "üîï"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },

    "custom/lock_screen": {
        "format": "ÔÄ£",
        "on-click": "hyprlock",
        "tooltip": false
    },

    "hyprland/workspaces": {
        "on-click": "activate",
        "disable-scroll": true,
        "all-outputs": true,
        "show-special": true,
        "persistent-workspaces": {
            "*": [ 1, 2, 3, 4 ],
        },
    },

    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 20,
        "all-outputs": true,
        "tooltip-format": "{name}: {title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
            "rofi"
         ]
    },

    "tray": {
        "icon-size": 20,
        "spacing": 10
    },

    "cpu": {
        "interval": 10,
        "format": "Ôãõ",
        "max-length": 10,
        "format-alt-click": "click-right",
        "format-alt": "Ôãõ {usage}%",
        "on-click":"kitty -e btop"
    },

    "memory": {
        "interval": 30,
        "format": "ÔÉâ",
        "format-alt-click": "click-right",
        "format-alt": "ÔÉâ {}%",
        "max-length": 10,
        "tooltip": true,
        "tooltip-format": "Memory - {used:0.1f}GB used",
        "on-click":"kitty -e btop"
    },
    
    "disk": {
    "interval": 600,
    "format": "Û∞ãä",
    "path": "/",
    "on-click": "baobab &",
    "format-alt-click": "click-right", 
    "format-alt": "Û∞ãä {percentage_used}%",
    "tooltip": true,
    "tooltip-format": "HDD - {used} used out of {total} on {path} ({percentage_used}%)",
    "states": {
        "warning": 85,
        "critical": 90
    }
},

    "temperature": {
        "hwmon-path":"/sys/class/hwmon/hwmon3/temp1_input",
        "thermal-zone": 0,
        "format": "Ôãâ",
        "format-alt-click": "click-right",
        "format-alt": "Ôãâ {temperatureC}¬∞C",
        "critical-threshold": 70,
        "format-critical": "Ôãá {temperatureC}¬∞C",
    },


    "pulseaudio": {
        "format": "{icon}",
        "format-muted": "Ôë¶",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "on-scroll-up": "wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 5%+",
        "on-scroll-down": "wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 5%-",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "tooltip": true,
        "tooltip-format": "{icon} at {volume}%",
        "on-click-right": "pavucontrol"
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
        "on-scroll-up": "wpctl set-volume -l 1 @DEFAULT_AUDIO_SOURCE@ 5%+",
        "on-scroll-down": "wpctl set-volume -l 1 @DEFAULT_AUDIO_SOURCE@ 5%-",
        "scroll-step": 5,
        "tooltip": true,
        "tooltip-format": "ÔÑ∞ at {volume}%"
    },

    

    "custom/weather": {
        //shows the current weather and forecast
        "tooltip" : true,
        "format" : "{}",
        "interval" : 3600,
        "exec" : "~/.config/waybar/scripts/wttr.py",
        "return-type" : "json",
    },

    "custom/updates": {
        "format": "{}",
        "exec": "$HOME/.config/waybar/scripts/update-sys",
        "on-click": "$HOME/.config/waybar/scripts/update-sys update",
        "interval": 3600,
        "tooltip": true,
        "signal": 8,
        "return-type" : "json"
    },

    "network": {
        "format": "{ifname}",
        "format-wifi": "Ôá´ ",
        "format-ethernet": "Ôûñ ",
        "format-disconnected": "ÔÑß ", //An empty format will hide the module.
        "tooltip-format": "Ôûñ {ifname} via {gwaddr}",
        "tooltip-format-wifi": "Ôá´ {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "ÔÉÅ {ifname} {ipaddr}/{cidr}",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50
    },

    "clock": {
        "timezone": "America/New_York",
        "format": "ÔÄó {:%I:%M %p}",
        "tooltip": true,
        "on-click": "setbg",
        "tooltip-format": "ÔÅ≥ {:%A, %B %e %Y}"
    },

    "custom/khorshididate": { 
        "tooltip" : true,
        "format": "ÔÅ≥ {}",
        "format-alt": "ÔÅ≥ {alt}",
        "format-alt-click": "click-right",
        "interval": 3600,
        "exec": "~/.config/waybar/scripts/american-date",
        "return-type" : "json",
        "on-click": "gnome-calendar"
    },

   "hyprland/language": {
        "format": "{}",
        "on-click": "hyprctl switchxkblayout at-translated-set-2-keyboard next",
        "format-en": "EN",
        "format-fa": "FA"
   }

}
